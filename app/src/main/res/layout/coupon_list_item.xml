<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/coupon_name_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/coupon_shape"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:id="@+id/coupon_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="AXIS200"
            android:fontFamily="sans-serif-medium"
            android:layout_gravity="center_vertical"
            android:textSize="16sp"
            android:textColor="@color/colorPrimaryText"/>

    </LinearLayout>

    <Button
        android:id="@+id/apply_btn"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:text="@string/apply"
        android:textColor="@color/colorPrimary"
        android:background="@android:color/transparent"
        android:layout_alignParentEnd="true"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/coupon_head_description_txt"
        android:layout_below="@id/coupon_name_container"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/colorPrimaryText"
        android:text="@string/get_40_discount_using_axis_bank_select_credit_card"/>

    <TextView
        android:id="@+id/dash_line_coupon"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="16dp"
        android:layout_below="@id/coupon_head_description_txt"
        android:background="#e0e0e0"/>

    <TextView
        android:id="@+id/description2_txt"
        android:layout_below="@id/dash_line_coupon"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Use code AXIS200 &amp; get 40% discount up to Rs.200 on orders above Rs.400"/>

    <TextView
        android:id="@+id/more_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/more"
        android:background="@android:color/transparent"
        android:layout_below="@id/description2_txt"
        android:textColor="@color/colorPrimary"
        android:textSize="14sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/terms_container"
        android:orientation="vertical"
        android:visibility="gone"
        android:paddingTop="16dp"
        android:layout_below="@id/more_btn">

        <TextView
            android:id="@+id/terms_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/terms_amp_conditions_apply"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/bullet_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/u25cf"
                android:textColor="@color/colorPrimaryText"/>

            <TextView
                android:id="@+id/terms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/bullet_1"
                android:text="@string/u25cf_offer_is_valid_on_all_modes_of_payments"/>


        </RelativeLayout>





    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="16dp"
        android:layout_below="@id/terms_container"
        android:background="#546e7a" />

</RelativeLayout>